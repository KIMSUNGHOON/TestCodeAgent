#!/usr/bin/env python3
"""TestCodeAgent CLI executable

This script serves as the entry point for the TestCodeAgent CLI tool.
It can be installed globally and run from anywhere.

Usage:
    testcodeagent [options] [prompt]
"""

import sys
from pathlib import Path

# Add backend to Python path
backend_dir = Path(__file__).parent.parent / "backend"
if str(backend_dir) not in sys.path:
    sys.path.insert(0, str(backend_dir))

# Import and run main
from cli.__main__ import main

if __name__ == "__main__":
    sys.exit(main())
